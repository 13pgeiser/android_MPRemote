<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.pgeiser.mpremote.fragment_welcome.WelcomeFragment"
        android:label="WelcomeFragment" >
        <action
            android:id="@+id/action_welcomeFragment_to_connectViewFragment"
            app:destination="@id/connectViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/connectViewFragment"
        android:name="com.pgeiser.mpremote.fragment_discover.DiscoverFragment"
        android:label="ConnectViewFragment" >
        <argument
            android:name="bluetoothDevice"
            app:argType="android.bluetooth.BluetoothDevice" />
        <action
            android:id="@+id/action_connectViewFragment_to_attributesFragment"
            app:destination="@id/attributesFragment" />
        <action
            android:id="@+id/action_connectViewFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:popEnterAnim="@anim/slide_in_right" />
    </fragment>
    <fragment
        android:id="@+id/attributesFragment"
        android:name="com.pgeiser.mpremote.fragment_services.ServicesFragment"
        android:label="AttributesFragment" >
        <argument android:name="services"
            app:argType="android.bluetooth.BluetoothGattService[]" />
        <action
            android:id="@+id/action_attributesFragment_to_connectViewFragment"
            app:destination="@id/connectViewFragment"
            app:enterAnim="@anim/slide_in_right"
            app:popEnterAnim="@anim/slide_in_right" />
    </fragment>
</navigation>