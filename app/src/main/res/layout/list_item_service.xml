<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="service"
            type="android.bluetooth.BluetoothGattService" />

        <variable
            name="clickListener"
            type="com.pgeiser.mpremote.fragment_attributes.ServiceListener" />

        <variable
            name="gatt"
            type="com.pgeiser.mpremote.Gatt.Companion" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="4dp"
        android:onClick="@{ () -> clickListener.onClick(service) }">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@{ gatt.gattUuidAsString(service.uuid) }" />

        <TextView
            android:id="@+id/service_uuid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@{ service.uuid.toString() }" />
    </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>